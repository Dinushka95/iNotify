<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.views.MainStartPermissionActivity"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewWarningMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WARNING::This Application Needs Permission. Without them the Application will not Start"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts permission" />

            <Button
                android:id="@+id/buttonPermissionContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Give Permission" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location permission" />

            <Button
                android:id="@+id/buttonPermissionLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Give Permission" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCalender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calender permission" />

            <Button
                android:id="@+id/buttonPermissionCalender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Give Permission" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Permission" />

            <Button
                android:id="@+id/buttonPermissionPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Give Permission" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewUsageAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usage Access Permission" />

        <Button
            android:id="@+id/buttonPermissionUsageAccess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Give Permission" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNotificationAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Access Permission" />

        <Button
            android:id="@+id/buttonPermissionNotificationAccess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Give Permission" />
    </LinearLayout>
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="exit"
            android:text="Exit" />
    </LinearLayout>

