<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


<RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/inotifyappsicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        app:srcCompat="@drawable/baseline_album_black_18dp" />

    <TextView
        android:id="@+id/inotifyappspackagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:textSize="0sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/inotifyappstitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/inotifyappsicon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/inotifyappsswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
     android:layout_marginRight="15dp"
   />

</RelativeLayout>

</LinearLayout>